rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // USER DATA (scoped)
    match /users/{uid}/{document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    // TELEMETRY (write-only for users)
    match /sys_telemetry/{document=**} {
      allow write: if isSignedIn();
      allow read: if isAdmin();
    }

    // TELEMETRY SESSIONS (server-only writes)
    match /telemetry_sessions/{document=**} {
      allow read, write: if false;
    }

    // STATS
    match /stats/users/{uid}/apps/{appId}/summary {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    match /stats/apps/{appId}/summary {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /stats/telemetry/{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /stats/system/{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /stats_users/{uid} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // SYSTEM / GOD MODE
    match /system/policy {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /system_user_policies/{uid} {
      allow read, write: if isAdmin();
    }

    match /system/{document=**} {
      allow read, write: if isAdmin();
    }

    // FALLBACK: Admin override
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
